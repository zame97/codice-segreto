<%- include('header', {title, active: 'episodio'}); -%>

<main class="container-fluid mt-3">
    <div class="row">
        <div class="col-8 mx-auto">
          <table class="table">
            <thead class="thead-light">
                <tr>
                    <th>Audio</th>
                    <th>Episodio</th>
                    <th>Descrizione</th>
                    <th>Data</th>
                    <th>Sponsor</th>
                    <th>Prezzo</th>
                </tr>
            </thead>
            <tbody>
              <% episodio.forEach((episodi) => { %>
                <%- include('episodio-partial', {episodi}); -%>
              <% }); %>
            </tbody>
        </table>
        </div>
    </div>
</main>

<%- include('footer'); -%>